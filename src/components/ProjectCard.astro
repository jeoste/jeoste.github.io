---
// ProjectCard.astro
// Un composant pour pr√©senter un projet avec une image et du texte
export interface Props {
  title: string;
  description: string;
  image: string; // chemin relatif vers le .png
}

const { title, description, image } = Astro.props;
---

<div class="project-card flex flex-col md:flex-row gap-6 items-center rounded-lg p-6 my-8" style="background: transparent;">
  <img src={image} alt={title} class="w-48 h-48 object-cover rounded shadow-md" loading="lazy" />
  <div>
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="text-base text-foreground/90">{description}</p>
  </div>
</div>
