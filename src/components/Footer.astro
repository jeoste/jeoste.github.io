---
import Hr from "./Hr.astro";
import IconKakao from "@/assets/icons/IconKakao.svg";
import IconLinkedin from "@/assets/icons/IconLinkedin.svg";
import IconGitHub from "@/assets/icons/IconGitHub.svg";
import IconMail from "@/assets/icons/IconMail.svg";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <div class="flex items-center gap-4">
      <a href="https://open.kakao.com/jeoffrey" target="_blank" class="hover:text-accent transition-colors" aria-label="Kakao">
        <IconKakao class="h-5 w-5" />
      </a>
      <a href="https://linkedin.com/in/jeoffrey-stephan/" target="_blank" class="hover:text-accent transition-colors" aria-label="LinkedIn">
        <IconLinkedin class="h-5 w-5" />
      </a>
      <a href="https://github.com/jeoste" target="_blank" class="hover:text-accent transition-colors" aria-label="GitHub">
        <IconGitHub class="h-5 w-5" />
      </a>
      <a href="mailto:jeoffrey.stephan@gmail.com" target="_blank" class="hover:text-accent transition-colors" aria-label="Email">
        <IconMail class="h-5 w-5" />
      </a>
    </div>
    <div class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row">
      <span>Copyright &#169; {currentYear}</span>
      <span class="hidden sm:inline">&nbsp;|&nbsp;</span>
      <span>All rights reserved</span>
    </div>
  </div>
</footer>
