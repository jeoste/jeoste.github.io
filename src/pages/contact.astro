---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Main from "@/layouts/Main.astro";
import IconKakao from "@/assets/icons/IconKakao.svg";
import IconQlik from "@/assets/icons/IconQlik.svg";

const pageTitle = "";
const pageDesc = "> Let's connect & chat";
---

<Layout>
  <Header />
  <Main pageTitle={pageTitle} pageDesc={pageDesc}>
    <div class="prose prose-lg prose-slate dark:prose-invert max-w-3xl mx-auto">
      <h1>Contact & Connect</h1>
      <p>Feel free to contact me for any questions, projects inquiries, feedback or just to say hello. I'll get back to you as soon as possible.</p>
      
      <div class="space-y-6 mt-8">
        <div class="flex items-center gap-3">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <a 
            href="https://linkedin.com/in/jeoffrey-stephan/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-foreground hover:text-accent underline underline-offset-4 transition-colors"
          >
            LinkedIn
          </a>
        </div>
        
        <div class="flex items-center gap-3">
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <a 
            href="mailto:jeoffrey.stephan@gmail.com"
            class="text-foreground hover:text-accent underline underline-offset-4 transition-colors"
          >
            jeoffrey.stephan@gmail.com
          </a>
        </div>

        <div class="flex items-center gap-2">
          <IconKakao class="h-5 w-5" />
          <a
            href="https://open.kakao.com/jeoffrey"
            target="_blank"
            class="transition-colors hover:text-accent"
          >
            Kakao ID : jeoffrey
          </a>
        </div>

        <div class="flex items-center gap-3">
          <IconQlik class="h-5 w-5" />
          <a
            href="https://community.qlik.com/t5/user/viewprofilepage/user-id/281057"
            target="_blank"
            rel="noopener noreferrer"
            class="text-foreground hover:text-accent underline underline-offset-4 transition-colors"
          >
            Qlik/Talend Community : jeoste
          </a>
        </div>

      </div>
    </div>
  </Main>
  <Footer />
</Layout>