      <div class="not-prose grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        <!-- Exemple de carte d'application -->
        
        <div class="vault-card">
          <div class="mb-3 flex items-start gap-4">
            <a href="https://talend.com" target="_blank">
              <img
                src="/assets/images/logos/talend.png"
                alt="Talend logo"
                class="h-12 w-12 flex-shrink-0 rounded-md bg-white object-contain p-1 shadow-sm"
              />
            </a>
            <div class="min-w-0 flex-1">
              <a
                href="https://talend.com"
                target="_blank"
                class="vault-card-title mb-1 text-lg font-semibold"
              >JSON Tools</a
