---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-3xl flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center">
      <h1 class="text-9xl font-bold text-accent">404</h1>
      <span aria-hidden="true">¯\_(ツ)_/¯</span>
      <p class="mt-4 text-2xl sm:text-3xl">Oops this page does not exist (yet?)</p>
      <LinkButton
        href="/"
        class="my-8 px-6 py-3 rounded-lg bg-accent text-background font-semibold text-lg shadow-md transition-all duration-200 hover:scale-105 hover:-translate-y-1 hover:bg-accent-hover hover:text-background focus-visible:outline-2 focus-visible:outline-accent focus-visible:outline-dashed"
        aria-label="Go back to homepage"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
